        var rowDetail = (tbl.rows.length);
        alert(rowDetail);
        alert(idx);
        if (rowDetail > 2) {
            document.getElementById("tbDetailMultiple").deleteRow(idx);
            indexDelete = idx;
            @*var y = collectDataDetail();
            
