@model WebApp_AAJI.Models.journalHeader

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Journal Adjustment</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.voucherNo)
        @Html.HiddenFor(model => model.journalType, new { @Value = "MANUAL" })

        <div class="form-group">
            @Html.LabelFor(model => model.voucherDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.voucherDate,"{0:dd/MMM/yyyy}", new { @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.voucherDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.remark, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.remark, new { @class = "form-control", @rows = 2 })
                @Html.ValidationMessageFor(model => model.remark)
            </div>
        </div>
        <br />
        @*<fieldset>
    <legend> Detail </legend>*@
            <div id="dvCategoryResults">
                @*@{Html.RenderPartial("_PartialPage1");}*@
            </div>
                <div id="dvDetail">
                    @Html.Partial("_PartialPage1")
                </div>
        @*</fieldset>*@
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*<input type="submit" value="Save" class="btn btn-primary" onclick="confirmSave();" />*@
                <input type="button" value="Save" class="btn btn-primary" onclick="confirmSave();" />
            </div>
        </div>
    </div>
}

