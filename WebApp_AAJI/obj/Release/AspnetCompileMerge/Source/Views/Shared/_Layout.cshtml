<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/dtree.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/dtree.js"></script>
    <script type="text/javascript">
        function triggerPopUpVendor()
        {
            @*$("#modalVendor").load('@(Url.Action("LoadPopUpVendor", "Common", null, Request.Url.Scheme))');*@
        }
    </script>
    <script src="~/Scripts/commonFunction.js"></script>

    <style>
    .photo {
        width: 125px;
        height: 150px;
        border: inset;
        position: absolute;
        margin-left: 400px;
        margin-top: -30px;
        background-size: cover;
        background-image: url(@Url.Action("../img/no_avatar.png"));
    }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("AAJI Application", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @*commented by jka*@
                    @*<li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>*@
                    <li>@Html.ActionLink("Log Out", "Logout", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                </ul>
                @{
                    WebApp_AAJI.Models.LoginViewModel.userLogin lvm = Session["sessionUserLogin"] as WebApp_AAJI.Models.LoginViewModel.userLogin;
                    <div style="float: right;padding-top: 15px;color: white;">Welcome, @lvm.userName</div>
                }
            </div>
        </div>
    </div>

    <div class="container body-content">
        <div class="row panel">
            <div class="col-lg-2">
                <ul class="nav navbar-nav">
                    @Html.Action("Menu", "Nav")
                </ul>
            </div>
            @*<div id="categoris" class="col-lg-2">                
                              
            </div>*@
            <div class="col-lg-10">
                @RenderBody()
            </div>
        </div>
        @*@RenderBody()*@
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - AAJI Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>