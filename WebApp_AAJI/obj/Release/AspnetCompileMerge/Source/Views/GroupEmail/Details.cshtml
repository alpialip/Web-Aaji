        <dt>
            @Html.DisplayNameFor(model => model.groupEmailName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.groupEmailName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.emailAddress)
        </dt>

        <dd>
            @if (ViewBag.email != null)
            {
                string[] emailSaved = Model.emailAddress.Split(',');
                string emailDistributed = string.Empty;
                foreach (var a in ViewBag.email as IEnumerable<WebApp_AAJI.Models.email>)
                {
                    for (int i = 0; i < emailSaved.Length; i++)
                    {
                        if (Convert.ToInt32(emailSaved[i].ToString()) == a.emailID)
                        {
                            emailDistributed += a.emailName + " (" + a.emailAddress + ")" + ", ";
                        }
                    }
                }
                emailDistributed = emailDistributed.Substring(0, emailDistributed.Length - 2);
                @emailDistributed;
            }
