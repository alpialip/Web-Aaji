{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>menu</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.menuName, new { @class = "control-label col-md-2" })
