@model PagedList.IPagedList<WebApp_AAJI.Models.journalHeader>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Journal Adjustment";
}

<h2>@ViewBag.Title</h2>

<p>
    <img src='~/img/add.png' style="width:15px" /> @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "JournalAdjustment", FormMethod.Get))
{
    <p>
        Find : @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
