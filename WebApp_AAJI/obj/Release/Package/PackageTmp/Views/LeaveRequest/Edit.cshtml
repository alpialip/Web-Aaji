@model WebApp_AAJI.Models.transLeaveRequest

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>transLeaveRequest</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.leaveRequestID)
        @Html.HiddenFor(model=>model.createdDate)
        @Html.HiddenFor(model => model.createdUser)

        <div class="form-group">
            @Html.LabelFor(model => model.employeeID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.employeeID)
                @Html.TextBox("employeeName", ViewBag.employeeName as string, new { @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.employeeID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.leaveStartDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.leaveStartDate, new { type = "date", @Value = Model.leaveStartDate.ToString("yyyy-MM-dd") })
                @Html.ValidationMessageFor(model => model.leaveStartDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.leaveEndDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.leaveEndDate, new { type = "date", @Value = Model.leaveEndDate.ToString("yyyy-MM-dd") })
                @Html.ValidationMessageFor(model => model.leaveEndDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.leaveDescription, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.leaveDescription)
                @Html.ValidationMessageFor(model => model.leaveDescription)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
