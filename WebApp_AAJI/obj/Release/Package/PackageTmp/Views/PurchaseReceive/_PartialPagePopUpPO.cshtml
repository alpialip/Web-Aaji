<script type="text/javascript">
    function copyToFormPR(poId, poDate, vendorId, vendorName, poUrgent) {
        $('#poId').val(poId);
        //$('#prFrom').val(deptName);
        $('#poDate').text(poDate);
        $('#poVendorID').text(vendorId);
        $('#poVendorName').text(vendorName);
        $('#poUrgent').text(poUrgent);
        $("#dvDetail").load('@(Url.Action("LoadDetailPO", "PurchaseReceive", null, Request.Url.Scheme))?poId=' + poId);
        $('#myModal').modal('hide');
    }
</script>

@if (ViewBag.POPopUp != null)
{
    <table class="table table-striped table-hover table-condensed" width="700px">
        <tr>
            <th></th>
            <th>PO No.</th>
            <th>PO Date</th>
            <th>Vendor</th>
            <th>Type</th>
        </tr>
        @foreach (var item in ViewBag.POPopUp as IEnumerable<WebApp_AAJI.Models.purchaseOrderHeader.POpopUp>)
        {
            <tr>
                <td>
                    <a href="#" class="glyphicon glyphicon-ok-sign" data-toggle="modal" onclick="copyToFormPR('@item.poId', '@item.poDate', '@item.vendorId', '@item.vendorName', '@item.poUrgent');"></a>
                </td>
                <td>@item.poId</td>
                <td>@item.poDate.ToString("dd MMM yyyy")</td>
                <td>@item.vendorName</td>
                <td>@item.poUrgent</td>
            </tr>
        }
        @*@for (var item in ViewData["PRPopUp"] as List<string> )
            {

            }*@
    </table>
}
