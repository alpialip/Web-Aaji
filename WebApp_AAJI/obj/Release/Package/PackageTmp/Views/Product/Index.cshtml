@model IEnumerable<WebApp_AAJI.Models.product>

@{
    ViewBag.Title = "Product";
}

<h2>@ViewBag.Title</h2>

<p>
    <img src='~/img/add.png' style="width:15px" /> @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.productCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.productName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.unit)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.productCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.productName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.unit)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id = item.productID }) <img src='~/img/edit.png' style="width:15px" /> |
            @Html.ActionLink("Details", "Details", new { id = item.productID }) <img src='~/img/view.png' style="width:15px" />  |
            @Html.ActionLink("Delete", "Delete", new { id = item.productID }) <img src='~/img/delete.png' style="width:15px" />*@ 

            <a href="@Url.Action("Edit")/@item.productID"><img src='~/img/edit.png' style="width:15px" title="Edit" /></a>&nbsp;&nbsp;&nbsp;
            <a href="@Url.Action("Details")/@item.productID"><img src='~/img/view.png' style="width:15px" title="View" /></a>&nbsp;&nbsp;&nbsp;
            <a href="@Url.Action("Delete")/@item.productID"><img src='~/img/delete.png' style="width:15px" title="Delete" /></a>&nbsp;&nbsp;&nbsp;
        </td>
    </tr>
}

</table>
