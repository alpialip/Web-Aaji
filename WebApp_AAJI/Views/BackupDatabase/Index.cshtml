
@{
    ViewBag.Title = "Backup Database";
}
<script>
function onclickBackup()
{
    document.getElementById('backup').style.display = 'none';
    document.getElementById('check').style.display = 'none';
    document.getElementById('failed').style.display = 'none';
    document.getElementById('wait').style.display = '';
    $("#divBackUpDB").load('@(Url.Action("backupDB", "BackupDatabase", null, Request.Url.Scheme))');
}
</script>
<h2>@ViewBag.Title</h2>
<div>
    <table>
        <tr>
            <td>Backup Database</td>
            <td>
                <div id="divBackUpDB" style="float:left">
                    @Html.Partial("_PartialPageBackupDB")
                </div>
                <input type="hidden" id="hdnUserId" value="@ViewBag.userId" />
                <div style="float:left;padding-left:3px;">
                    <img src="~/img/backup.png" id="backup" width="20px" title="Click To Backup Database" onclick="onclickBackup()" style="cursor:hand" />
                    <img src="~/img/check.png" id="check" width="40px" title="Backup Database Succeed" style="display:none" />
                    <img src="~/img/pleasewait.gif" id="wait" width="165px" title="Backup Database Processing" style="display:none" />
                    <img src="~/img/delete.png" id="failed" width="25px" title="Backup Database Failed" style="display:none" />
                </div>
            </td>
        </tr>
    </table>
</div>


