@model WebApp_AAJI.Models.journalHeader

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="form-horizontal">
    <h4>Journal Adjustment</h4>
    <hr />
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.journalType)
    @Html.HiddenFor(model => model.createdDate)
    @Html.HiddenFor(model => model.createdUser)
    @Html.HiddenFor(model => model.modifiedDate)
    @Html.HiddenFor(model => model.modifiedUser)

    <div class="form-group">
        @Html.LabelFor(model => model.voucherNo, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.voucherNo, new { @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.voucherNo)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.voucherDate, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.voucherDate, "{0:dd MMM yyyy}", new { @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.voucherDate)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.remark, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.remark, new { @class = "form-control", @rows = 2, @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.remark)
        </div>
    </div>

    <br />
    <div id="dvDetail">
        @Html.Partial("_PartialPage2")
    </div>
    <br />
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.voucherNo }) |
    @Html.ActionLink("Back to List", "Index")
</p>
