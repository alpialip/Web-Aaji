            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.leaveStartDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.leaveStartDate, new { @class = "tanggal", @Value = Model.leaveStartDate.ToString("dd-MMM-yyyy") })
                @Html.ValidationMessageFor(model => model.leaveStartDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.leaveEndDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.leaveEndDate, new { @class = "tanggal", @Value = Model.leaveEndDate.ToString("dd-MMM-yyyy") })
                @Html.ValidationMessageFor(model => model.leaveEndDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cutiInHoliday, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.cutiInHoliday
