@model WebApp_AAJI.Models.transLeaveRequest

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>transLeaveRequest</h4>
        <hr />
