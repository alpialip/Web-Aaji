            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.leaveDescription, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.leaveDescription, new { @class = "form-control", @rows = "2" })
                @Html.ValidationMessageFor(model => model.leaveDescription)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.approvedStatus, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.CheckBox("approvedStatus", Model.approvedStatus == true, new { @class = "form-control", label="huwala" })*@
                @Html.DropDownListFor(model => model.approvedStatus, new SelectList(
                  new List<Object>{
                       new { value = "" , text = "= Waiting ="  },
                       new { value = true , text = "Approved" },
                       new { value = false , text = "Rejected"},
                    },
                  "value",
                  "text",
            ""), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.approvedStatus)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.acknowledgeStatus, new { @class = "control-label col-md-2" })
