                @*@Html.TextBoxFor(model => model.category, new { @class = "form-control" })*@
                @Html.DropDownListFor(model => model.category, new SelectList(
                  new List<Object>{
                       new { value = "tahunan" , text = "Cuti Tahunan"  },
                       new { value = "persalinan" , text = "Cuti Persalinan" },
