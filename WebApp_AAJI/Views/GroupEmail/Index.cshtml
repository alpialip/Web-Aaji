@model IEnumerable<WebApp_AAJI.Models.groupEmail>

@{
    ViewBag.Title = "Group Email";
}

<h2>@ViewBag.Title</h2>

<p>
    <img src='~/img/add.png' style="width:15px" /> @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.groupEmailName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.emailAddress)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.modifiedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.modifiedUser)
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.groupEmailName)
            </td>
            <td>
                @if (ViewBag.email != null)
                {
                    string[] emailSaved = item.emailAddress.Split(',');
                    string emailDistributed = string.Empty;
                    foreach (var a in ViewBag.email as IEnumerable<WebApp_AAJI.Models.email>)
                    {
                        for (int i = 0; i < emailSaved.Length; i++)
                        {
                            if (Convert.ToInt32(emailSaved[i].ToString()) == a.emailID)
                            {
                                emailDistributed += a.emailName + ", ";
                            }
                        }
                    }
                    emailDistributed = emailDistributed.Substring(0, emailDistributed.Length - 2);
                    @emailDistributed;
                }
                @*@Html.DisplayFor(modelItem => item.emailAddress)*@
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.modifiedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.modifiedUser)
                </td>*@
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.groupEmailID }) <img src='~/img/edit.png' style="width:15px" />  |
                @Html.ActionLink("Details", "Details", new { id = item.groupEmailID }) <img src='~/img/view.png' style="width:15px" />  |
                @Html.ActionLink("Delete", "Delete", new { id = item.groupEmailID }) <img src='~/img/delete.png' style="width:15px" />*@ 

                <a href="@Url.Action("Edit")/@item.groupEmailID"><img src='~/img/edit.png' style="width:15px" title="Edit" /></a>&nbsp;&nbsp;&nbsp;
                <a href="@Url.Action("Details")/@item.groupEmailID"><img src='~/img/view.png' style="width:15px" title="View" /></a>&nbsp;&nbsp;&nbsp;
                <a href="@Url.Action("Delete")/@item.groupEmailID"><img src='~/img/delete.png' style="width:15px" title="Delete" /></a>&nbsp;&nbsp;&nbsp;
            </td>
        </tr>
    }

</table>
